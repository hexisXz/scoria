#!/bin/bash

#########
# V 1.14#
#########



# colors
red='\033[0;31m'
blue='\033[0;34m'
green='\033[0;32m'
purple='\033[0;35m'
NC='\033[0m' # No Color



case $1 in

# install a program
  -i)
     echo -e "${green}Downloading${purple}"
     sh <(curl -v -L https://raw.githubusercontent.com/hexisXz/hexpmg-repo/main/$2-pkg) 2> /dev/null

    case $? in
         1)
          echo -e "${red}Error wrong URL" && exit 1

         ;;
    esac

    source ~/"$2-pkg"

    rm *-pkg 2> /dev/null

    case $? in
         1)
          echo -e "${blue}nothing to do"
          echo -e "${green}no pkg files on the system"

         ;;
         0)
          echo -e "${green}removed all pkg files"
         ;;
     esac

     echo -e "${green}Done"



    ;;


# list all installed programs
  -l)
    ls -al /usr/local/src/

   ;;


# install the latest pkg's
  -ilp)
      echo -e "${green}Downloading${purple}"
      sh <(curl -v -L https://raw.githubusercontent.com/hexisXz/hexpmg-repo.latest/main/$2-pkg) 2> /dev/null

      case $? in
           1)
            echo -e "${red}Error wrong URL" && exit 1

           ;;
      esac

      source ~/"$2-pkg"

      rm *-pkg 2> /dev/null

      case $? in
           1)
            echo -e "${blue}nothing to do"
            echo -e "${green}no pkg files on the system"

           ;;
           0)
            echo -e "${green}removed all pkg files"
           ;;
       esac

       echo -e "${green}Done"



      ;;

# uninstall hexpmg
  -UN)
     exec ~/.config/hexpmg/uninstall/uninstall
     ;;

# update hexpmg or update package manager
  -UP)
     exec ~/.config/hexpmg/update/update
     ;;

# remove a program
  -R)
    echo -e "${red}removing program"
    cd /usr/local/src/$2 && sudo make uninstall && sudo rm -r /usr/local/src/$2


    e=$(ls | grep -i $2-pkg)

    if command -v $e >/dev/null; then
            echo -e "${green}Done"
            exit 1
    else
       echo -e "${red}removing pkg file"
       rm $2-pkg
       echo -e "${green}Done"
    fi

    ;;

# update a program
   -Up)
      rm $2-pkg 2> /dev/null

      case $? in
           1)

           ;;
           0)
            echo -e "${green}removing pkg file"
           ;;
      esac

      echo -e "${purple}updating program${blue}"
      cd /usr/local/src/$2 && sudo make uninstall && sudo rm -r /usr/local/src/$2

      axel -a --output=$2-pkg https://raw.githubusercontent.com/hexisXz/hexpmg-repo/main/$2-pkg 2> /dev/null

      case $? in
           1)
            echo -e "${red}Error wrong URL" && exit 1

           ;;
      esac

      source ~/"$2-pkg"

      echo -e "${green}Done"

      rm *-pkg 2> /dev/null

      case $? in
           1)
            echo -e "${blue}nothing to do"
            echo -e "${green}no pkg files on the system"

           ;;
           0)
            echo -e "${green}removed all pkg files"
           ;;
       esac

      echo -e "${green}Done"




      ;;

# remove all -pkg files
  -RAP)
      rm *-pkg 2> /dev/null

      case $? in
           1)
            echo -e "${blue}nothing to do"
            echo -e "${green}no pkg files on the system"

           ;;
           0)
            echo -e "${green}removed all pkg files"
           ;;
      esac


    ;;

# display a list of all commands
  -h)
    echo -e "${blue}usage: [-i install a program

        -R: remove a program

	-l: list all installed programs

        -RAP: Remove All -pkg files
	
	-Up: update a program
	
	-ilp: install the latest pkg's
	
	-UP: update hexpmg
	
	-UN: uninstall hexpmg]
"
   ;;
  *)
   echo -e "${blue}usage: [-i: install a program

        -R: remove a program

        -l: list all installed programs

        -RAP: Remove All -pkg files
	
	-Up: update a program
	
	-ilp: install the latest pkg's
	
	-UP: update hexpmg
	
	-UN: uninstall hexpmg]"

   ;;
esac
