#!/bin/bash

# colors
red='\033[0;31m'
blue='\033[0;34m'
green='\033[0;32m'
purple='\033[0;35m'
NC='\033[0m' # No Color


echo -e "${green}updating"

sudo rm /bin/scoria && sudo rm -r ~/.config/scoria && echo -e "${blue}hexpmg will now reinstall.${green}" && sh <(curl -v -L https://raw.githubusercontent.com/hexisXz/scoria/main/install.sh)

